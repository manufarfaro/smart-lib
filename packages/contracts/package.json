{
    "name": "@manufarfaro/sl-contracts",
    "description": "Just a simple project to test the hardhat + ethers + alchemy tooling",
    "version": "1.5.0",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run clean && npm run compile && npm run build:ts && npm run build:declarations",
        "build:ts": "tsc -p tsconfig.build.json",
        "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
        "compile": "npx hardhat compile",
        "clean": "npx rimraf dist artifacts cache typechain abi",
        "test": "npx hardhat test",
        "format": "npx prettier --write \"contracts/**/*.sol\" \"test/**/*.ts\" \"scripts/**/*.ts\" \"./*.ts\"",
        "lint": "npx prettier --check \"contracts/**/*.sol\" \"test/**/*.ts\"",
        "coverage": "npx hardhat coverage",
        "deploy:avax:testnet": "npx hardhat run scripts/deploy.ts --network avax_testnet"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/manufarfaro/smart-lib"
    },
    "devDependencies": {
        "@atixlabs/hardhat-time-n-mine": "^0.0.5",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
        "@nomicfoundation/hardhat-ethers": "^3.0.5",
        "@nomiclabs/hardhat-etherscan": "^3.0.3",
        "@typechain/ethers-v6": "^0.4.3",
        "@typechain/hardhat": "^8.0.0",
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^9.1.0",
        "@types/node": "^20.14.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "chai": "^4.3.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^10.2.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "ethers": "^6.10.0",
        "hardhat": "^2.22.6",
        "hardhat-abi-exporter": "^2.10.1",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "^1.0.10",
        "prettier": "^3.3.2",
        "prettier-plugin-solidity": "^1.3.1",
        "shx": "^0.3.4",
        "solhint": "^4.5.4",
        "solidity-coverage": "^0.8.12",
        "ts-node": "^10.9.2",
        "typechain": "^8.3.1",
        "typescript": "^5.4.5"
    }
}
