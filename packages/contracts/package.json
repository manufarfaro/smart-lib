{
    "name": "@manufarfaro/sl-contracts",
    "description": "Just a simple project to test the hardhat + ethers + alchemy tooling",
    "version": "1.0.0",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run clean && npm run compile && npm run build:ts && npm run build:declarations",
        "build:ts": "tsc -p tsconfig.build.json",
        "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
        "compile": "npx hardhat compile",
        "clean": "npx rimraf dist artifacts cache typechain abi",
        "test": "npx hardhat test",
        "format": "npx prettier --write \"contracts/**/*.sol\" \"test/**/*.ts\" \"scripts/**/*.ts\" \"./*.ts\"",
        "lint": "npx prettier --check \"contracts/**/*.sol\" \"test/**/*.ts\"",
        "coverage": "npx hardhat coverage",
        "deploy:avax:testnet": "npx hardhat run scripts/deploy.ts --network avax_testnet"
    },
    "devDependencies": {
        "@atixlabs/hardhat-time-n-mine": "^0.0.5",
        "@nomiclabs/hardhat-ethers": "^2.0.5",
        "@nomiclabs/hardhat-etherscan": "^3.0.3",
        "@nomiclabs/hardhat-ganache": "^2.0.1",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@typechain/ethers-v5": "^7.2.0",
        "@typechain/hardhat": "^2.3.1",
        "@types/chai": "^4.3.0",
        "@types/chai-as-promised": "^7.1.5",
        "@types/mocha": "^9.1.0",
        "@types/node": "^12.20.47",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "chai": "^4.3.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^9.1.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-promise": "^5.2.0",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.2",
        "hardhat": "^2.9.3",
        "hardhat-abi-exporter": "^2.8.0",
        "hardhat-deploy": "^0.11.4",
        "hardhat-gas-reporter": "^1.0.8",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "shx": "^0.3.4",
        "solhint": "^3.3.7",
        "solidity-coverage": "^0.7.20",
        "ts-node": "^10.7.0",
        "typechain": "^5.2.0",
        "typescript": "^4.6.3"
    }
}
